<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#4ba73c" />
      <stroke
          android:width="0.5dp"
          android:color="#4ba73c" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="2dp"
          android:top="2dp"
          android:right="2dp"
          android:bottom="2dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#4ba73c"
          android:endColor="#4ba73c"  
          android:angle="270" />
      <stroke
          android:width="0.5dp"
          android:color="#4ba73c" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="2dp"
          android:top="2dp"
          android:right="2dp"
          android:bottom="2dp" />
    </shape>
  </item>
</selector>